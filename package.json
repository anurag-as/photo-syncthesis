{
  "name": "photo-syncthesis",
  "productName": "Photo Syncthesis",
  "version": "1.0.0",
  "description": "A beautiful dark-themed photo folder comparison and synchronization tool",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "lint:fix": "eslint --ext .ts,.tsx . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,html}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,html}\"",
    "format:all": "npm run format && npm run lint:fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --runInBand --detectOpenHandles",
    "test:file": "jest --verbose",
    "test:all": "npm run test:coverage && npm run lint",
    "test:verify": "./scripts/run-tests.sh"
  },
  "keywords": [],
  "author": {
    "name": "Anurag",
    "email": "samapthanurag3@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
    "@electron-forge/plugin-fuses": "^7.8.3",
    "@electron-forge/plugin-webpack": "^7.8.3",
    "@electron/fuses": "^1.8.0",
    "@jest/globals": "^27.5.1",
    "@types/jest": "^27.5.2",
    "@types/jsdom": "^21.1.7",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vercel/webpack-asset-relocator-loader": "1.7.3",
    "css-loader": "^6.11.0",
    "electron": "37.3.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "fork-ts-checker-webpack-plugin": "^7.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.5.1",
    "jest-environment-jsdom": "^27.5.1",
    "jsdom": "^26.1.0",
    "node-loader": "^2.1.0",
    "prettier": "^3.6.2",
    "style-loader": "^3.3.4",
    "ts-jest": "^27.1.5",
    "ts-loader": "^9.5.2",
    "typescript": "~4.5.4"
  },
  "dependencies": {
    "crc-32": "^1.2.2",
    "electron-squirrel-startup": "^1.0.1"
  }
}
